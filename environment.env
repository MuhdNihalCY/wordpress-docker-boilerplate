# WordPress Docker Boilerplate - Environment Configuration
# Copy this file to .env and customize the values for your environment
#
# IMPORTANT: Change all default passwords before deploying to production!
# Use strong, unique passwords with at least 12 characters including:
# - Uppercase letters (A-Z)
# - Lowercase letters (a-z) 
# - Numbers (0-9)
# - Special characters (!@#$%^&*)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MYSQL_DATABASE=wordpress_db
MYSQL_USER=wordpress_user
MYSQL_PASSWORD=change_this_password_123
MYSQL_ROOT_PASSWORD=change_this_root_password_123

# MySQL Configuration
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# =============================================================================
# WORDPRESS CONFIGURATION
# =============================================================================
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=1

# WordPress Memory Limits
WP_MEMORY_LIMIT=256M
WP_MAX_MEMORY_LIMIT=512M

# WordPress Security Settings
AUTOMATIC_UPDATER_DISABLED=true
WP_AUTO_UPDATE_CORE=false

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
# Change these ports if you have conflicts or need different ports
WORDPRESS_PORT=8080
PHPMYADMIN_PORT=8081

# =============================================================================
# PRODUCTION CONFIGURATION (uncomment and configure for production)
# =============================================================================
# WORDPRESS_URL=https://yourdomain.com
# WORDPRESS_HOME=https://yourdomain.com

# =============================================================================
# ADVANCED CONFIGURATION (optional)
# =============================================================================
# WordPress Multisite (uncomment if using multisite)
# WORDPRESS_ALLOW_MULTISITE=true

# Custom WordPress configuration
# WORDPRESS_CONFIG_EXTRA=define('WP_CACHE', true);

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Development Environment:
#    - WORDPRESS_DEBUG=1 (enables debug logging)
#    - Use default passwords for quick setup
#    - Automatic updates disabled for stability
#
# 2. Production Environment:
#    - WORDPRESS_DEBUG=0 (disables debug logging)
#    - Use strong, unique passwords
#    - Enable SSL/HTTPS
#    - Set up proper backup procedures
#    - Enable security monitoring
#
# 3. Password Requirements:
#    - Minimum 12 characters
#    - Mix of uppercase, lowercase, numbers, symbols
#    - Unique for each environment
#    - Store securely (password manager recommended)
#
# 4. Environment Variables:
#    - Never commit .env files to version control
#    - Use different .env files for different environments
#    - Consider using Docker secrets for sensitive data
